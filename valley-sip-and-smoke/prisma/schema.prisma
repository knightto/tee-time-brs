// Prisma schema for Valley Sip and Smoke

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  MEMBER
  STAFF
  ADMIN
}

enum SubscriptionStatus {
  ACTIVE
  PAUSED
  CANCELED
  COMPED
  MANUAL
  PAST_DUE
}

enum RSVPStatus {
  GOING
  CANCELED
  WAITLIST
}

model User {
  id             String          @id @default(cuid())
  email          String          @unique
  name           String?
  role           UserRole        @default(MEMBER)
  memberCode     String          @unique
  guestAllowance Int             @default(2)
  notes          String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  subscription   Subscription?
  rsvps          RSVP[]
  checkIns       CheckIn[]
  bottleRequests BottleRequest[]
}

model MembershipPlan {
  id                String          @id @default(cuid())
  name              String          @unique
  description       String?
  monthlyPriceCents Int
  stripePriceId     String?
  active            Boolean         @default(true)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  subscriptions     Subscription[]
}

model Subscription {
  id               String             @id @default(cuid())
  userId           String             @unique
  planId           String
  status           SubscriptionStatus @default(MANUAL)
  stripeCustomerId String?
  stripeSubId      String?
  currentPeriodEnd DateTime?
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt

  user             User               @relation(fields: [userId], references: [id])
  plan             MembershipPlan     @relation(fields: [planId], references: [id])
}

model EventNight {
  id        String    @id @default(cuid())
  date      DateTime
  startTime String
  endTime   String
  capacity  Int       @default(60)
  notes     String?
  published Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  rsvps     RSVP[]
  checkIns  CheckIn[]

  @@unique([date, startTime])
}

model RSVP {
  id           String     @id @default(cuid())
  userId       String
  eventNightId String
  guestCount   Int        @default(0)
  status       RSVPStatus @default(GOING)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  user         User       @relation(fields: [userId], references: [id])
  eventNight   EventNight @relation(fields: [eventNightId], references: [id])

  @@unique([userId, eventNightId])
}

model CheckIn {
  id           String     @id @default(cuid())
  userId       String
  eventNightId String
  checkedInAt  DateTime   @default(now())
  checkedInBy  String?

  user         User       @relation(fields: [userId], references: [id])
  eventNight   EventNight @relation(fields: [eventNightId], references: [id])

  @@unique([userId, eventNightId])
}

model Bottle {
  id           String        @id @default(cuid())
  name         String
  distillery   String?
  proof        Float?
  type         String?
  notes        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  reserveItems ReserveItem[]
}

model ReserveWeek {
  id         String        @id @default(cuid())
  weekOfDate DateTime      @unique
  label      String
  published  Boolean       @default(false)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  items      ReserveItem[]
}

model ReserveItem {
  id               String      @id @default(cuid())
  reserveWeekId    String
  bottleId         String
  isFeatured       Boolean     @default(false)
  isLeftover       Boolean     @default(false)
  publicPriceCents Int
  memberPriceCents Int
  pourOz           Float       @default(2.0)
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  reserveWeek      ReserveWeek @relation(fields: [reserveWeekId], references: [id])
  bottle           Bottle      @relation(fields: [bottleId], references: [id])

  @@index([reserveWeekId])
}

model Announcement {
  id          String    @id @default(cuid())
  title       String
  body        String
  visibleFrom DateTime?
  visibleTo   DateTime?
  published   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model BottleRequest {
  id         String   @id @default(cuid())
  userId     String
  bottleName String
  notes      String?
  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])
}
